<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduct"
    android:background="?attr/colorOnPrimary"
    >



    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:background="@drawable/round_ibutton"
                android:id="@+id/tvNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="Nombre: "
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondary"
                app:layout_constraintBaseline_toTopOf="parent" />

            <ImageView
                android:id="@+id/iVProductDetail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/test_image"
                />



            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:text="Precio unitario: "
                android:fontFamily="@font/poppins"
                android:textColor="?attr/colorOnSecondary"
                />

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Stock:"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="?attr/colorOnSecondary"
                />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="DescripciÃ³n: "
                android:fontFamily="@font/poppins"
                android:textColor="?attr/colorOnSecondary"
                android:justificationMode="inter_word"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="agregar al carrito"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/colorPrimary"
        >


        <ImageView
            android:src="@drawable/ic_perm_identity"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:id="@+id/ivFooterSong"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvProgressTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="58dp"
            android:text="0"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btnPlay2"
            android:layout_alignParentEnd="true"
            android:background="?attr/colorPrimary"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/ic_shop_store"
            />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logOutBtnDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logout"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_gravity="end|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>